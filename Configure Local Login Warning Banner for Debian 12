---
- name: Configure Local Login Warning Banner for Debian 12
  hosts: all
  become: yes

  tasks:
    - name: Set Local Login Warning Banner
      template:
        src: issue.j2
        dest: /etc/issue
      notify: Update Issue

  handlers:
    - name: Update Issue
      command: echo -e "\\033[1;31mRebuilding /etc/issue file\\033[0m"
