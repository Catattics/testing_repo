---
- name: Update and Upgrade Debian
  hosts: all
  become: yes

  tasks:
    - name: Update APT package cache
      apt:
        update_cache: yes

    - name: Upgrade all packages
      apt:
        upgrade: yes

    - name: Perform dist-upgrade
      apt:
        upgrade: dist

    - name: Clean up package cache
      apt:
        autoremove: yes
        autoclean: yes
